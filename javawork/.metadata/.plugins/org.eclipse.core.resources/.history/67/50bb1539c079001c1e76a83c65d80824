package day0120;

import java.util.Scanner;

public class Ex10_IfScan {
  public static void main(String[] args) {
    Scanner stdIn = new Scanner(System.in);
    
    int score;
    String result;
    
    System.out.println("점수를 입력하세요");
    score = stdIn.nextInt();
    
    if (score >= 90) {
      result = "A";
    } else if (score >= 80) {
      result = "B";
    } else if (score >= 70) {
      result = "C";
    } else {
      result = "다음 기회에... 재시험";
    }
    
    System.out.println(result);
  }
}
