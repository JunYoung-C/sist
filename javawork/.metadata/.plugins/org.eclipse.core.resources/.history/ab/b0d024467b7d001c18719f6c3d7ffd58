package day0125;

public class Ex01_ForWhileReview {
  
  public static void test1() {
    
    // for문으로 1부터 5까지를 더하기
    int sum = 0;
    for (int i = 0; i <= 5; i++) {
      sum += i;
    }
    System.out.println(sum);
  }
  
  public static void test2() {
    int sum = 0;
    for (int i = 1; i <= 10; i++) {
      if (i % 2 == 1) {
        sum += i;
      }
    }
    System.out.println("홀수의 합 " + sum);
  }
  
  public static void main(String[] args) {
    test1();
    test2();
  }
}
